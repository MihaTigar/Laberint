#include<iostream>

#include<string>

#include<fstream>

using namespace std;



//!Problem u programu je stizanje na 4 sve ostalo što sam napravo radi.

//!To ostalo  je micanje, prepoznavanje 3 i ne prelaženje preko 1.





int main()
{



//! Odreðivanje tablice



    int s, r;

    int Laira=3, Morr=4, DandD=5;



    while(Morr<DandD)
    {



        string podaci2;

        ifstream level2;

        level2.open("lvl2.txt");

        cout<<podaci2<<endl;



        while(Laira<Morr)
        {



//! datoteka



            string podaci1;

            ifstream level1;

            level1.open("lvl1.txt");

            cout<<podaci1<<endl;









//! Radi lakšeg provjeravanja sam stavio 4 4



            s=4;

            r=4;



            int tablica[s][r];



//!Upis u polje

            for(int i=0; i<s; i++)
            {

                for(int j=0; j<r; j++)
                {

                    tablica[i][j]=1;

                }

            }

            tablica[1][1]=3;

            tablica[1][2]=0;

            tablica[2][1]=0;

            tablica[2][2]=0;

            tablica[2][3]=4;



//!Ispis iz polja

            for(int i=0; i<s; i++)
            {

                for(int j=0; j<r; j++)
                {

                    cout<<tablica[i][j]<<"\t";

                }

                cout<<endl;

            }



            cout<<"3 se kontrolira sa tipkama W,A,S,D. Može se kretati samo po 0"<<endl;

            string k;



//!Beskonaèna petnja.  Uvijet za cij "4".



            short int lolek=0, bolek=1;
            int a,b;
            a = 1;
            b = 1;
            while(lolek<bolek)
            {

                cin>>k;
//!za pomak u desno
                if(k=="d")
                {
                    if(tablica[a][b+1]==4)
                    {
                        cout << lolek  << endl;
                        lolek=2;
                    }
                    else if(tablica[a][b+1]==1)
                    {

                        cout<<"Nemoze preko 1"<<endl;

                    }
                    else
                    {
                        tablica[a][b+1]=3;
                        tablica[a][b]=0;
                        b++;
                    }
                }

//!za pomak u lijevo
                if(k=="a")
                {
                    if(tablica[a][b+1]==4)
                    {
                        cout << lolek  << endl;
                        lolek=2;
                    }
                    else if(tablica[a][b-1]==1)
                    {

                        cout<<"Nemoze preko 1"<<endl;

                    }
                    else
                    {
                        tablica[a][b-1]=3;
                        tablica[a][b]=0;
                        b--;
                    }
                }
//!za pomak dolje
                if(k=="s")
                {
                    if(tablica[a+1][b]==4)
                    {
                        cout << lolek  << endl;
                        lolek=2;
                    }
                    else if(tablica[a+1][b]==1)
                    {

                        cout<<"Nemoze preko 1"<<endl;

                    }
                    else
                    {
                        tablica[a+1][b]=3;
                        tablica[a][b]=0;
                        a++;
                    }
                }


       //!za pomak gore
                if(k=="d")
                {
                    if(tablica[a-1][b]==4)
                    {
                        cout << lolek  << endl;
                        lolek=2;
                    }
                    else if(tablica[a-1][b]==1)
                    {

                        cout<<"Nemoze preko 1"<<endl;

                    }
                    else
                    {
                        tablica[a-1][b]=3;
                        tablica[a][b]=0;
                        a--;
                    }
                }


//!Ispis iz polja

                for(int i=0; i<s; i++)
                {
                    for(int j=0; j<r; j++)
                    {
                        cout<<tablica[i][j]<<"\t";
                    }
                    cout<<endl;
                }
            }

            Laira=5;

            level1.close();

        }

        Morr=6;

    }

    cout<<"Pobledili ste";

}
